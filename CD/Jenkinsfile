pipeline {
    agent any

    environment {
        DOCKERHUB_CREDS=credentials('dockerhub_creds')
        LC_ALL = "en_US.UTF-8"
        LANG    = "en_US.UTF-8"
        LANGUAGE = "en_US.UTF-8"
        GITHUB_SSH_CREDS=credentials('github_bigdata2024_itmo')
        DCOMPOSE_VAULT_PASS = credentials('DOCKERCOMPOSE_VAULT_PASS')
        PATH = "/var/lib/jenkins/.local/bin:${env.PATH}"
    }

    stages {
        stage('Cloning github-repository'){
            steps{
                echo "====[STAGE1]===="
                cleanWs()
                sh "ssh-agent bash -c 'ssh-add $GITHUB_SSH_CREDS; git clone -b main git@github.com:Dzigen/BigData2024_ITMO_lab4.git'"
                sh 'docker --version && docker-compose --version && dvc --version && ansible --version && ansible-vault --version'
                sh 'cd BigData2024_ITMO_lab4/modelapi && dvc pull models/prod_model.pkl'
                sh 'mkdir BigData2024_ITMO_lab4/modelapi/logs BigData2024_ITMO_lab4/kafka_db_connector/logs'
            }
        }
        
        stage('Pull prod-image, db-image and env-image for tests') {
            steps {
                echo "====[STAGE2]===="
                sh 'echo  $DOCKERHUB_CREDS_PSW | docker login -u $DOCKERHUB_CREDS_USR --password-stdin'
                sh 'docker pull dzigen/model_api:v1'
                sh 'docker pull dzigen/mongodb:v1'
                sh 'docker pull dzigen/base_model_api:v1'
                sh 'docker pull dzigen/kafkadb_connector:v1'
            }
        }

        stage('Run integration-tests') {
            steps {
                echo "====[STAGE3]===="
                // TODO
            }
        }

        stage('Build func test-image') {
            steps {
                echo "====[STAGE4]===="
                sh 'cd BigData2024_ITMO_lab4 && echo $DCOMPOSE_VAULT_PASS | ansible-playbook -v -e @vault.yaml --ask-vault-pass secret_playbook.yaml --tags "build_test_modelapi"'
            }
        }

        stage('Run functional-tests') {
            steps {
                echo "====[STAGE5]===="
                sh 'cd BigData2024_ITMO_lab4 && echo $DCOMPOSE_VAULT_PASS | ansible-playbook -v -e @vault.yaml --ask-vault-pass secret_playbook.yaml --tags "up_test_modelapi"'
                sh 'docker logs modelapi_cntname'
                sh 'docker logs kafkadb_connector'
            }
        }

    }

    post {
        always {
            sh 'docker stop modelapi_cntname mongoui_cntname mongodb_cntname kafkadb_conn_cntname kafka_cntname zookeeper_cntname'
            sh 'docker rm modelapi_cntname mongoui_cntname mongodb_cntname kafkadb_conn_cntname kafka_cntname zookeeper_cntname'
            sh 'docker rm test_modelapi_cntname'
            sh 'docker logout'
        }
    }
}   